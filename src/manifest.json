{
    "name": "Membrane",
    "version": "0.0.4",
    "description": "Membrane Chrome Extension",
    "permissions": [
      "activeTab",
      "storage",
      "declarativeContent",
      "https://membrane.io/api/graphql"
    ],
    "background": {
      "scripts": ["pages/background.js"]
    },
    "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["lib/contentScript.js"]
    }
  ],

    "page_action": {
      "default_popup": "pages/popup.html"
    },
    "options_page": "pages/options.html",
    "externally_connectable": {
      "ids": []
    },
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "icons": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "manifest_version": 2

  }
